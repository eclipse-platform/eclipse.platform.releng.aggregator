<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.eclipse</groupId>
		<artifactId>eclipse-platform-parent</artifactId>
		<version>4.40.0-SNAPSHOT</version>
		<relativePath>../eclipse-platform-parent</relativePath>
	</parent>

	<artifactId>sites</artifactId>
	<packaging>pom</packaging>

	<modules>
		<module>eclipse-platform-repository</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-p2-repository-plugin</artifactId>
					<configuration>
						<includeAllDependencies>true</includeAllDependencies>
						<includeAllSources>true</includeAllSources>
						<repositoryName>${repository.name}</repositoryName>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<profiles>
		<profile>
			<id>eclipse-sign</id>
			<properties>
				<eclipse.signing.skip>true</eclipse.signing.skip>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-gpg-plugin</artifactId>
						<configuration>
							<skipIfJarsigned>false</skipIfJarsigned>
							<skipIfJarsignedAndAnchored>true</skipIfJarsignedAndAnchored>
							<pgpKeyBehavior>skip</pgpKeyBehavior>
							<skip>${eclipse.signing.skip}</skip>
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>sign-p2-artifacts</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
